<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aburgess11.foodmood.WelcomeActivity">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@color/colorSecondaryDark" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:elevation="24dp"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/cloud" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:elevation="24dp"
        android:fontFamily="cursive"
        android:lineSpacingExtra="12sp"
        android:text="Welcome to FoodMood"
        android:textColor="@android:color/white"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnEatAlone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="@android:color/white"
        android:elevation="24dp"
        android:text="Eating Alone?"
        android:textColor="@color/colorSecondary" />

    <Button
        android:id="@+id/btnWithFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEatAlone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@android:color/white"
        android:elevation="24dp"
        android:text="Eating with Friends?"
        android:textColor="@color/colorSecondary" />
</RelativeLayout>
