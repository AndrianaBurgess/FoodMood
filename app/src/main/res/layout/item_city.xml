<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context="com.example.aburgess11.foodmood.CityAdapter">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fadingEdge="vertical"
        android:filterTouchesWhenObscured="true"
        android:focusableInTouchMode="true"
        app:srcCompat="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/ivColorRectangle"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignBottom="@+id/ivMatchImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/image_overlay" />

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivBackground"
        android:layout_alignParentStart="true"
        android:fontFamily="cursive"
        android:lineSpacingExtra="12sp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="36sp" />
</RelativeLayout>
