<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMatchImage1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/cardview_shadow_start_color"/>

            <TextView
                android:id="@+id/tvMatchDetails1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingRight="4dp"
                android:text="match percentage, distance"
                android:layout_alignBottom="@+id/ivMatchImage1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tvMatchName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvMatchDetails1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingRight="4dp"
                android:text="Match 1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/cardview_shadow_start_color" />

            <ImageView
                android:id="@+id/ivMatchImage2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/cardview_light_background"
                android:layout_below="@+id/ivMatchImage1"/>

            <TextView
                android:id="@+id/tvMatchDetails2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingRight="4dp"
                android:text="match percentage, distance"
                android:layout_alignBottom="@+id/ivMatchImage2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tvMatchName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvMatchDetails2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingRight="4dp"
                android:text="Match 2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/cardview_shadow_start_color" />

            <ImageView
                android:id="@+id/ivMatchImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/cardview_shadow_start_color"
                android:layout_below="@+id/ivMatchImage2"/>

            <TextView
                android:id="@+id/tvMatchDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingRight="4dp"
                android:text="match percentage, distance"
                android:layout_alignBottom="@+id/ivMatchImage"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tvMatchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvMatchDetails"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingRight="4dp"
                android:text="Match 3"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/cardview_shadow_start_color" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/matchesHeader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@drawable/final_border"
        android:fadingEdge="horizontal">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:layout_gravity="bottom"
            android:backgroundTint="@android:color/background_light"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:toolbarId="@+id/expanded_menu">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/background_light"
                android:fadingEdge="horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ivUpArrow"
                    android:text="@string/matches_header"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/ivUpArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp"
                    app:srcCompat="@android:drawable/arrow_up_float" />

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>